<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <section>
      <h2>Upload your photo</h2>
      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="author" value="Autor de la obra">
        <input type="text" name="name" value="titulo de la foto">
        <input type="file" name="file">
        <input type="submit" value="Save">
      </form>
    </section>

    <section>
        <% pictures.forEach(function(picture) { %>
          <h3 class="picture-name">TÃ­tulo de la obra: <%= picture.name %></h3>
          <h3 class="picture-author">Autor: <%= picture.author %></h3>
          <h4 class="picture-id"><%= picture._id %></h3>
          <img src="<%= picture.pic_path %>" alt="<%= picture.pic_name %>" />
          <form action="<%= picture._id%>/delete" method="POST">
            <button type="submit">Delete artwork</button>
          </form>
        <% })%>
    </section>


  </body>
</html>
